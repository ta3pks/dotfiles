{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npm install:*)",
      "Bash(nc:*)",
      "Bash(test:*)",
      "Bash(node:*)",
      "Bash(npm run dev)",
      "Bash(cargo test:*)",
      "Bash(curl:*)",
      "Bash(npm run test:*)",
      "mcp__web-search-prime__webSearchPrime",
      "mcp__web-reader__webReader",
      "Bash(cargo install:*)",
      "Bash(mdbook build:*)",
      "Bash(npm run check:*)",
      "Bash(npm run build:*)",
      "Bash(git status:*)",
      "Bash(pkill:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "node \"/home/nikos/.claude/hooks/gsd-statusline.js\""
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "claude-notifications-go@claude-notifications-go": true,
    "claude-code-wakatime@wakatime": true,
    "claude-memory-plugin@enhance": true,
    "frontend-design@claude-code-plugins": true
  },
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/home/nikos/.claude/hooks/gsd-check-update.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/home/nikos/.claude/hooks/gsd-context-monitor.js\""
          }
        ]
      }
    ]
  }
}
