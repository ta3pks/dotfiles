{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@mohak34/opencode-notifier@latest",
    "@tarquinen/opencode-dcp@latest",
    "opencode-mem",
    "opencode-wakatime"
  ],
  "permission": {
    "external_directory": {
      "/home/nikos/*": "allow",
      "/tmp*": "allow"
    }
  },
  "provider": {
    "zai-coding-plan": {
      "models": {
        "glm-4.7": {}
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:latest": {},
        "gpt-oss:20b": {},
        "gpt-oss:120b-cloud": {}
      }
    },
    "openrouter": {
      "models": {
        "xiaomi/mimo-v2-flash:free": {
          "name": "mimo-v2-flash"
        }
      }
    }
  },
  "mcp": {
    "browserOS_nikos": {
      "type": "remote",
      "url": "http://127.0.0.1:9100/mcp",
      "enabled": false
    },
    "jira": {
      "type": "local",
      "command": [
        "bunx",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
    "pipedream": {
      "type": "local",
      "command": [
        "bunx",
        "mcp-remote",
        "https://mcp.pipedream.net/v2"
      ],
      "enabled": false
    },
    "clickhouse": {
      "type": "local",
      "command": [
        "mcp-clickhouse"
      ],
      "environment": {
        "CLICKHOUSE_PASSWORD": "",
        "CLICKHOUSE_USER": "default",
        "CLICKHOUSE_HOST": "localhost",
        "CLICKHOUSE_PORT": "8123",
        "CLICKHOUSE_SECURE": "false"
      }
    },
    "nvim": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-neovim-server"
      ],
      "environment": {
        "ALLOW_SHELL_COMMANDS": "true",
        "NVIM_SOCKET_PATH": "/tmp/nvim"
      }
    },
    "zai-vision": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "{env:ZAI_API_KEY}",
        "Z_AI_MODE": "ZAI"
      }
    },
    "zwebsearch": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@z_ai/mcp-server"
      ],
      "environment": {
        "Z_AI_API_KEY": "{env:ZAI_API_KEY}",
        "Z_AI_MODE": "WEB_SEARCH"
      }
    },
    "zwebreader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "Bearer {env:ZAI_API_KEY}"
      }
    },
    "zread": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer {env:ZAI_API_KEY}"
      }
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide",
        "--project-from-cwd",
        "--enable-web-dashboard=false"
      ],
      "enabled": true
    }
  },
  "default_agent": "orchestrator"
}
