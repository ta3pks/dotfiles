{
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 4,

    "modules-left": [
        "custom/prev-workspace",
        "sway/workspaces",
        "custom/new-workspace",
        "sway/mode",
        "custom/netspeed"
    ],
    "modules-center": ["clock#date", "clock#time"],
    "modules-right": [
        "custom/wifi-toggle",
        "network",
        "sway/language",
        "cpu",
        "memory",
        "custom/temp",
        "pulseaudio",
        "battery",
        "tray",
        "custom/power-profile",
        "custom/power"
    ],

    "custom/wifi-toggle": {
        "exec": "nmcli radio wifi | grep -q enabled && echo '' || echo 'ğŸ“µ'",
        "interval": 2,
        "tooltip": "WiFi is off (click to enable)",
        "on-click": "nmcli radio wifi $(nmcli radio wifi | grep -q enabled && echo off || echo on)"
    },

    "custom/netspeed": {
        "exec": "~/.local/bin/waybar.sh speed",
        "interval": 1,
        "tooltip": "Network speed"
    },

    "custom/prev-workspace": {
        "format": "-",
        "tooltip": "Create workspace before first (if min > 1)",
        "on-click": "min=$(swaymsg -t get_workspaces | jq '[.[].num] | min // 1'); [ $min -gt 1 ] && swaymsg workspace number $((min - 1))"
    },

    "custom/new-workspace": {
        "format": "+",
        "tooltip": "Create new workspace",
        "on-click": "swaymsg workspace number $(swaymsg -t get_workspaces | jq '[.[].num] | max // 0 | . + 1')"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 8
    },

    "custom/power-profile": {
        "exec": "profile=$(asusctl profile get | head -1 | awk '{print $NF}'); case $profile in LowPower) echo '{\"text\": \"ğŸ”‹\", \"tooltip\": \"LowPower\", \"class\": \"lowpower\"}';; Balanced) echo '{\"text\": \"âš–ï¸\", \"tooltip\": \"Balanced\", \"class\": \"balanced\"}';; Performance) echo '{\"text\": \"ğŸš€\", \"tooltip\": \"Performance\", \"class\": \"performance\"}';; esac",
        "return-type": "json",
        "interval": 5,
        "on-click": "~/.local/bin/power-profile-menu.sh"
    },

    "custom/power": {
        "format": "â»",
        "tooltip": "Power Menu",
        "on-click": "~/.local/bin/power-menu.sh"
    },

    "sway/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{name}"
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "sway/language": {
        "format": "âŒ¨ï¸ {short}",
        "tooltip-format": "{long}",
        "on-click": "swaymsg input '*' xkb_switch_layout next"
    },

    "network": {
        "interval": 1,
        "format-wifi": "ğŸ“¶ {essid}",
        "format-ethernet": "ğŸŒ Wired",
        "format-linked": "ğŸ”— {ifname} (No IP)",
        "format-disconnected": "âŒ Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}\nSignal: {signalStrength}%\nGateway: {gwaddr}\nâ†“ {bandwidthDownBits}  â†‘ {bandwidthUpBits}",
        "on-click": "~/.local/bin/wifi-menu.sh",
        "on-click-right": "nmcli radio wifi $(nmcli radio wifi | grep -q enabled && echo off || echo on)"
    },

    "cpu": {
        "interval": 2,
        "format": "ğŸ–¥ï¸ {usage}%",
        "tooltip-format": "CPU: {usage}%\n{avg_frequency} GHz"
    },

    "memory": {
        "interval": 5,
        "format": "ğŸ’¾ {percentage}%",
        "tooltip-format": "RAM: {used}/{total} ({percentage}%)\nSwap: {swapUsed}/{swapTotal}"
    },

    "custom/temp": {
        "exec": "~/.local/bin/waybar-temp.sh",
        "return-type": "json",
        "interval": 2
    },

    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}% {power:.1f}W",
        "format-charging": "ğŸ”Œ {capacity}% {power:.1f}W",
        "format-plugged": "ğŸ”Œ {capacity}% {power:.1f}W",
        "format-full": "ğŸ”‹ {capacity}%",
        "format-icons": ["ğŸª«", "ğŸ”‹", "ğŸ”‹", "ğŸ”‹", "ğŸ”‹"],
        "format-time": "{H}:{M}",
        "tooltip-format": "{timeTo}\n{capacity}% - {power}W\nTime remaining: {time}"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "ğŸ”‡ {volume}%",
        "format-icons": {
            "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "tooltip-format": "{desc}: {volume}%"
    },

    "clock#date": {
        "interval": 60,
        "format": "{:%d/%m/%Y %a}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "on-click": "gnome-calendar",
        "calendar": {
            "mode": "month",
            "weeks-pos": "left",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'>{}</span>",
                "weeks": "<span color='#99ffdd'>W{}</span>",
                "weekdays": "<span color='#ffcc66'>{}</span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },

    "clock#time": {
        "interval": 1,
        "format": "{:%H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "on-click": "gnome-calendar",
        "calendar": {
            "mode": "month",
            "weeks-pos": "left",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'>{}</span>",
                "weeks": "<span color='#99ffdd'>W{}</span>",
                "weekdays": "<span color='#ffcc66'>{}</span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    }
}
